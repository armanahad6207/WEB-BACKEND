<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post" onsubmit="return validateForm()">
          <input
            class="block bg-zinc-700 my-5 p-3 rounded-md w-full outline-none"
            type="text"
            placeholder="title goes here"
            name="title"
            id="titlename"
          />

          <textarea
            class="block block bg-zinc-700 resize-none my-5 p-3 rounded-md w-full outline-none"
            placeholder="write your task details"
            name="details"
          ></textarea>
          <input
            class="rounded-sm p-2 text-xl bg-blue-400"
            type="submit"
            value="create task"
          />
        </form>
      </div>

      <div class="tasks flex gap-3 flex-wrap p-10">
        <% if(files.length>0){ %> <% files.forEach((val)=>{%>
        <div class="task min-w-72 bg-zinc-700 p-2">
          <h3 class="text-white text-3xl tracking-tighter"><%= val%></h3>
          <a class="text-blue-500 block mt-3" href="./files/<%= val%>"
            >read more..</a
          >
        </div>

        <%});%> <% }else{%>
        <h1 class="m-auto text-white text-[100px]">no task here!</h1>
        <%} %>
      </div>
    </div>
    <script>
      function validateForm() {
        let title = document.querySelector("#titlename").value;
        if (title === "") {
          alert("write title");
          return false;
        }
        return true;
      }
    </script>
  </body>
</html>
